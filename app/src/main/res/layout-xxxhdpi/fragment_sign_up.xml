<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="xyz.narengi.android.ui.fragment.SignInFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/round_rect_bg"
        >

        <xyz.narengi.android.ui.widget.CustomEditText
            android:id="@+id/register_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|center_horizontal"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:hint="@string/login_email_hint"
            android:inputType="textEmailAddress"
            android:imeOptions="actionNext"
            android:layout_margin="10dp"
            android:singleLine="true"
            style="@style/TextAppearance.AppCompat.Small"
            android:textColorHint="@android:color/darker_gray"
            android:background="@android:color/transparent"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:background="@android:color/darker_gray"
            />

        <xyz.narengi.android.ui.widget.CustomEditText
            android:id="@+id/register_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|center_horizontal"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:hint="@string/login_password_hint"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            android:layout_margin="10dp"
            android:singleLine="true"
            style="@style/TextAppearance.AppCompat.Small"
            android:textColorHint="@android:color/darker_gray"
            android:background="@android:color/transparent"
            />


    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0"
        android:layout_margin="16dp"
        android:background="@android:color/transparent"
        >

        <xyz.narengi.android.ui.widget.CustomButton
            android:id="@+id/register_registerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_bg_green"
            android:gravity="center"
            android:text="@string/register_button"
            android:textColor="@color/green_dark"
            style="@style/TextAppearance.AppCompat.Small"
            />


    </LinearLayout>

</LinearLayout>