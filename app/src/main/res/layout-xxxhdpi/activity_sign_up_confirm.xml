<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="xyz.narengi.android.ui.activity.SignUpConfirmActivity">


    <ImageView
        android:id="@+id/register_confirm_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="top|center_horizontal"
        android:layout_margin="0dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:gravity="center"
        android:padding="0dp"
        android:scaleType="center"
        android:src="@drawable/signup_successful"
        />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        >

        <xyz.narengi.android.ui.widget.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_vertical"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="0"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/profile_registration_success_title"
            style="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/green_dark"
            android:textStyle="bold" />

        <xyz.narengi.android.ui.widget.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_vertical"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_weight="0"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:singleLine="false"
            android:text="@string/profile_registration_success_message"
            style="@style/TextAppearance.AppCompat.Small"
            android:textColor="@android:color/tertiary_text_dark"
            android:textStyle="bold" />

        <xyz.narengi.android.ui.widget.CustomButton
            android:id="@+id/register_confirm_completeProfileButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_bg_black"
            android:gravity="center"
            android:text="@string/profile_complete_button"
            android:textColor="@android:color/black"
            style="@style/TextAppearance.AppCompat.Small"
            />

    </LinearLayout>


    <xyz.narengi.android.ui.widget.CustomButton
        android:id="@+id/register_confirm_skipButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="@string/profile_skip_update_button"
        style="@style/TextAppearance.AppCompat.Small"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        />

</LinearLayout>
