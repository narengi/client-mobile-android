<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    android:background="@android:color/white"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title & location -->
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            >

            <ImageButton
                android:id="@+id/book_requests_item_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="2dp"
                android:padding="0dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_action_hosting" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/book_requests_item_icon"
                android:gravity="center"
                android:orientation="vertical">

                <xyz.narengi.android.ui.widget.CustomTextView
                    android:id="@+id/book_requests_item_title"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:textSize="13sp"
                    android:background="@android:color/transparent"
                    android:gravity="right|center_vertical"
                    android:padding="4dp"
                    android:textColor="@color/green" />

                <xyz.narengi.android.ui.widget.CustomTextView
                    android:id="@+id/book_requests_item_location"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:textSize="10sp"
                    android:background="@android:color/transparent"
                    android:gravity="right|center_vertical"
                    android:padding="4dp"
                    android:textColor="@color/text_gray_light" />

            </LinearLayout>

        </RelativeLayout>

        <!-- Price & dates -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:padding="0dp"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:layout_gravity="left|center_vertical"
                android:orientation="horizontal">

                <xyz.narengi.android.ui.widget.CustomTextView
                    android:id="@+id/book_requests_item_price"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:textSize="10sp"
                    android:background="@color/orange_light"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textColor="@android:color/white" />

                <xyz.narengi.android.ui.widget.CustomTextView
                    android:id="@+id/book_requests_item_nightsCount"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:textSize="10sp"
                    android:background="@color/green"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <xyz.narengi.android.ui.widget.CustomTextView
                android:id="@+id/book_requests_item_dates"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:textSize="10sp"
                android:background="@android:color/transparent"
                android:gravity="left|center_vertical"
                android:padding="4dp"
                android:textColor="@color/text_gray_dark" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>