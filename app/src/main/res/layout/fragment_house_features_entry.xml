<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bg_gray_light"
    tools:context="xyz.narengi.android.ui.fragment.HouseFeaturesEntryFragment">


<!--<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_margin="10dp"-->
            <!--android:layout_weight="0"-->
            <!--android:background="@color/bg_gray_light"-->
            <!--android:orientation="vertical">-->

            <xyz.narengi.android.ui.widget.NestedScrollingListView
                android:id="@+id/house_features_entry_featuresListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="80dp"
                android:scrollbars="vertical"
                android:background="@android:color/transparent"
                />
        <!--</LinearLayout>-->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:background="@android:color/darker_gray"
        />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp">

            <xyz.narengi.android.ui.widget.CustomButton
                android:id="@+id/house_features_entry_nextButton"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:background="@drawable/button_bg_green"
                android:gravity="center"
                android:paddingBottom="0dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="0dp"
                android:text="@string/house_entry_next_button"
                android:textColor="@color/green_dark" />

            <xyz.narengi.android.ui.widget.CustomButton
                android:id="@+id/house_features_entry_previousButton"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:background="@drawable/button_bg_orange"
                android:gravity="center"
                android:paddingBottom="0dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="0dp"
                android:text="@string/house_entry_previous_button"
                android:textColor="@color/orange_light" />
        </RelativeLayout>
    </RelativeLayout>
