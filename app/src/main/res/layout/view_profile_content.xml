<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:background="@color/bg_gray_light"
    android:orientation="vertical"
    android:padding="0dp">

    <ImageView
        android:id="@+id/view_profile_profileImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="0dp"
        android:adjustViewBounds="true"
        android:background="@color/bg_gray_light"
        android:cropToPadding="true"
        android:gravity="center"
        android:minHeight="200dp"
        android:padding="0dp"
        android:scaleType="centerCrop" />

    <xyz.narengi.android.ui.widget.CustomTextView
        android:id="@+id/view_profile_name"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:textColor="@color/green"
        android:textStyle="bold" />

    <xyz.narengi.android.ui.widget.CustomTextView
        android:id="@+id/view_profile_location"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:textColor="@color/text_gray_light"
        android:textStyle="bold" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_margin="0dp"
        android:background="@android:color/darker_gray" />

    <xyz.narengi.android.ui.widget.CustomTextView
        android:id="@+id/view_profile_bio"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="0dp"
        android:background="@android:color/white"
        android:gravity="right|center_vertical"
        android:padding="20dp"
        android:singleLine="false"
        android:textColor="@color/text_gray_light"
        android:textStyle="bold" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_margin="0dp"
        android:background="@android:color/darker_gray" />

    <xyz.narengi.android.ui.widget.CustomTextView
        android:id="@+id/view_profile_memberFrom"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="@color/text_gray_light"
        android:textStyle="bold" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_margin="0dp"
        android:background="@android:color/darker_gray" />

    <xyz.narengi.android.ui.widget.CustomButton
        android:id="@+id/view_profile_verifyButton"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/ic_action_edit_profile"
        android:gravity="right|center_vertical"
        android:padding="8dp"
        android:textStyle="bold" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_margin="0dp"
        android:background="@android:color/darker_gray" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_margin="0dp"
        android:background="@android:color/transparent" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_margin="0dp"
        android:background="@android:color/darker_gray" />

    <xyz.narengi.android.ui.widget.CustomButton
        android:id="@+id/view_profile_reservationsButton"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/ic_action_edit_profile"
        android:gravity="right|center_vertical"
        android:padding="8dp"
        android:text="@string/view_profile_reservations_button"
        android:textColor="@color/orange_light"
        android:textStyle="bold" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_margin="0dp"
        android:background="@android:color/darker_gray" />

    <xyz.narengi.android.ui.widget.CustomButton
        android:id="@+id/view_profile_commentsButton"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/ic_action_edit_profile"
        android:gravity="right|center_vertical"
        android:padding="8dp"
        android:text="@string/view_profile_comments_button"
        android:textColor="@color/orange_light"
        android:textStyle="bold" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_margin="0dp"
        android:background="@android:color/darker_gray" />

    <xyz.narengi.android.ui.widget.CustomButton
        android:id="@+id/view_profile_introduceButton"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/ic_action_edit_profile"
        android:gravity="right|center_vertical"
        android:padding="8dp"
        android:text="@string/view_profile_introduce_button"
        android:textColor="@color/orange_light"
        android:textStyle="bold" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_margin="0dp"
        android:background="@android:color/darker_gray" />

    <xyz.narengi.android.ui.widget.CustomButton
        android:id="@+id/view_profile_logout"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@android:color/white"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/view_profile_logout"
        android:textColor="@color/orange_light" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_margin="0dp"
        android:background="@android:color/darker_gray" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_margin="0dp"
        android:background="@android:color/transparent" />

</LinearLayout>