<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    android:background="@android:color/white"
    card_view:cardCornerRadius="4dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- House info & image -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:weightSum="11">

            <TextView
                android:id="@+id/TextViewHousePrice"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="3"
                android:background="@drawable/round_rect_bg_orange"
                android:gravity="center"
                android:minWidth="100dp"
                android:padding="2dp"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:textSize="10sp" />


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:background="@android:color/transparent"
                android:orientation="horizontal"
                android:weightSum="8">

                <!-- Title & available dates -->
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:layout_margin="8dp"
                    android:layout_weight="5"
                    android:background="@android:color/transparent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/TextViewHouseName"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|top"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="right|center_vertical"
                        android:maxLines="1"
                        android:textColor="@color/green"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/TextViewFirstAvailableDate"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:drawablePadding="4dp"
                        android:drawableRight="@drawable/ic_action_my_house_dates"
                        android:gravity="right|center_vertical"
                        android:maxLines="1"
                        android:textColor="@color/text_gray_light"
                        android:textSize="10sp" />

                </LinearLayout>
                <ImageView
                    android:id="@+id/ImageViewHouseImage"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:layout_margin="4dp"
                    android:layout_weight="3"
                    android:padding="0dp"
                    android:scaleType="centerCrop" />
            </LinearLayout>

        </LinearLayout>

        <!-- House specs -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TextViewHouseRooms"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/icon_room"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@color/text_gray_dark"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/TextVIewHouseBeds"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/icon_bed"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@color/text_gray_dark"
                android:textSize="10sp" />


            <TextView
                android:id="@+id/TextViewHouseType"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/icon_type_house"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@color/text_gray_dark"
                android:textSize="10sp" />

        </LinearLayout>

        <!-- Action buttons -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/gray_light"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ButtonDeleteHouse"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/ic_action_remove_my_house"
                android:padding="8dp"
                android:text="@string/host_houses_remove_button"
                android:textSize="10sp" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <Button
                android:id="@+id/ButtonEditHouse"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/ic_action_edit_my_house"
                android:padding="10dp"
                android:text="@string/host_houses_edit_button"
                android:textSize="10sp" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <Button
                android:id="@+id/ButtonShowHouseDetail"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/ic_action_view_my_house"
                android:padding="10dp"
                android:text="@string/host_houses_view_button"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>