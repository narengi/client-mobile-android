            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/city_wikiLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/city_viewpager"
                android:layout_margin="0dp"
                android:background="@drawable/city_pager_bg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/city_viewpager_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_size_x_large"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/city_viewpager_item_house_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/city_title_bottom_margin"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_size_normal"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/city_viewpager_item_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:gravity="right|center_vertical"
                    android:singleLine="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_size_normal" />

                <TextView
                    android:id="@+id/city_viewpager_item_wiki"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:gravity="left|center_vertical"
                    android:singleLine="true"
                    android:text="@string/city_wikipedia_caption"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_size_normal"
                    android:visibility="gone" />
            </LinearLayout>

            <com.viewpagerindicator.CirclePageIndicator
                android:id="@+id/city_pageIndicator"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/city_wikiLayout"
                android:layout_margin="4dp" />

        </RelativeLayout>

            <!-- View B -->
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/city_detailLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <!-- Attractions header -->
                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/city_allAttractionsButton"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_gravity="left|center_vertical"
                        android:layout_margin="0dp"
                        android:background="@drawable/button_bg"
                        android:gravity="center"
                        android:maxHeight="32dp"
                        android:paddingBottom="0dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="0dp"
                        android:singleLine="true"
                        android:text="@string/city_all_attractions_button"
                        android:textColor="@android:color/tertiary_text_dark"
                        android:textSize="@dimen/font_size_small" />

                    <TextView
                        android:id="@+id/city_attractionsCaption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right|center_vertical"
                        android:layout_margin="0dp"
                        android:gravity="right|center_vertical"
                        android:text="@string/city_attractions_caption"
                        android:textColor="@android:color/tertiary_text_dark"
                        android:textSize="@dimen/font_size_normal"
                        android:textStyle="bold" />

                </RelativeLayout>

                <!-- Attractions gridview -->
                <HorizontalScrollView
                    android:id="@+id/city_attractionsHorizontalScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:fillViewport="false"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <GridView
                            android:id="@+id/city_attractionsGridView"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" />
                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>

            </LinearLayout>
