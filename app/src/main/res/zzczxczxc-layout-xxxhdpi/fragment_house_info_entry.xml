            <xyz.narengi.android.ui.widget.CustomEditText
                android:id="@+id/house_info_entry_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="0"
                android:background="@drawable/round_rect_bg_white"
                android:gravity="right|center_vertical"
                android:hint="@string/house_info_entry_title_hint"
                android:imeOptions="actionNext"
                android:padding="8dp"
                android:maxLines="1"
                style="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/tertiary_text_dark" />

            <xyz.narengi.android.ui.widget.CustomEditText
                android:id="@+id/house_info_entry_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="0"
                android:background="@drawable/round_rect_bg_white"
                android:gravity="right|top"
                android:hint="@string/house_info_entry_summary_hint"
                android:imeOptions="actionNext"
                android:minLines="5"
                android:padding="8dp"
                android:singleLine="false"
                style="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/tertiary_text_dark" />

            <Spinner
                android:id="@+id/house_info_entry_province"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="0"
                android:background="@drawable/round_rect_bg_white"
                android:gravity="right|center_vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="0dp"
                android:paddingLeft="0dp"
                android:prompt="@array/house_entry_province_array"
                android:spinnerMode="dialog" />

            <Spinner
                android:id="@+id/house_info_entry_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="0"
                android:background="@drawable/round_rect_bg_white"
                android:gravity="right|center_vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="0dp"
                android:paddingLeft="0dp"
                android:prompt="@array/house_entry_city_array"
                android:spinnerMode="dialog" />

            <xyz.narengi.android.ui.widget.CustomEditText
                android:id="@+id/house_info_entry_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="0"
                android:background="@drawable/round_rect_bg_white"
                android:drawableLeft="@drawable/ic_action_location_on"
                android:gravity="right|top"
                android:hint="@string/house_info_entry_address_hint"
                android:imeOptions="actionDone"
                android:padding="8dp"
                android:singleLine="false"
                android:minLines="2"
                style="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/tertiary_text_dark" />

        </LinearLayout>
