<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <xyz.narengi.android.ui.widget.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="0"
        android:layout_gravity="top|center_horizontal"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:maxLines="1"
        android:text="@string/mobile_input_caption"
        style="@style/TextAppearance.AppCompat.Small"
        android:textColor="@android:color/tertiary_text_dark"
        android:textStyle="bold" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_weight="0"
        android:background="@drawable/round_rect_bg"
        android:orientation="horizontal">

        <xyz.narengi.android.ui.widget.CustomEditText
            android:id="@+id/mobile_input_mobileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="10dp"
            android:maxLines="1"
            android:hint="@string/mobile_input_mobile_hint"
            android:textColorHint="@android:color/tertiary_text_dark"
            android:imeOptions="actionDone"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="left|center_vertical" />

        <xyz.narengi.android.ui.widget.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="right|center_vertical"
            android:maxLines="1"
            android:text="@string/mobile_input_mobile_caption"
            style="@style/TextAppearance.AppCompat.Small"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0"
        android:layout_margin="16dp"
        android:background="@android:color/transparent"
        >

        <xyz.narengi.android.ui.widget.CustomButton
            android:id="@+id/mobile_input_sendButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_bg_green"
            android:gravity="center"
            android:text="@string/mobile_input_send_button"
            android:textColor="@color/green_dark"
            style="@style/TextAppearance.AppCompat.Small"
            />


    </LinearLayout>


</LinearLayout>