<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="168dp"
    android:orientation="vertical"
    android:background="@color/bg_gray_light"
    >
    <ImageView
        android:id="@+id/drawer_header_userPicture"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/circle_bg_red_border"
        android:scaleType="centerCrop" />
    <xyz.narengi.android.ui.widget.CustomTextView
        style="@style/TextAppearance.AppCompat.Medium"
        android:id="@+id/drawer_header_userTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/drawer_header_userPicture"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="right|center_vertical"
        android:textColor="@color/green"
        android:textStyle="bold"
        />
    <!--style="@style/TextAppearance.AppCompat.Small"-->
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/drawer_header_userTitle"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/list_navigation_arrow"
        android:background="@color/bg_gray_light"
        />

</RelativeLayout>