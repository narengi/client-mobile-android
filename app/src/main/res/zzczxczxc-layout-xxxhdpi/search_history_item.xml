<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/city_attractionsHeaderLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="horizontal"
    android:background="@android:color/white"
    >

    <ImageView
        android:id="@+id/search_history_item_icon"
        style="?attr/actionButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_alignParentRight="true"
        android:contentDescription=""
        android:focusable="false"
        android:src="@android:drawable/ic_menu_recent_history"
        android:background="@android:color/white"
        android:clickable="false"
        />

    <xyz.narengi.android.ui.widget.CustomTextView
        android:id="@+id/search_history_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/search_history_item_icon"
        android:layout_gravity="right|center_vertical"
        android:layout_margin="8dp"
        android:gravity="right|center_vertical"
        android:padding="8dp"
        style="@style/TextAppearance.AppCompat.Small"
        android:textStyle="bold"
        android:focusable="false"
        android:clickable="false"
        />


</RelativeLayout>